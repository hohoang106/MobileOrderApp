<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set màu nền-->
    <solid
        android:color="@color/white" >
    </solid>

    <!-- đặt thuộc tính màu và độ rộng của đường viền -->
    <stroke
        android:width="1dp"
        android:color="@color/iron_l" >
    </stroke>

    <!-- các thuộc tính căn chỉnh-->
    <padding
        android:top="10dp"
        android:bottom="10dp"
        android:left="5dp"
        android:right="2dp">
    </padding>

    <!-- bán kính đường tròn ở 4 góc -->
    <corners
        android:radius="5dp" >
    </corners>

</shape>
