<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.sh.orderapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="AllowBackup"
        tools:targetApi="q">

        <activity android:name=".ui.activity.user.IntroductionActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.activity.user.InvoiceActivity" />
        <activity android:name=".ui.activity.admin.AdminReportActivity" />

        <activity android:name=".ui.activity.admin.MenuAdminActivity" />
        <activity android:name=".ui.activity.admin.AdminBillManagementActivity" />
        <activity
            android:name=".ui.activity.user.UserMenuActivity"
            android:screenOrientation="locked" />

        <activity android:name=".ui.activity.admin.ResetPassUserAdminActivity" />
        <activity android:name=".ui.activity.user.ConfirmOrderActivity" />
        <activity android:name=".ui.activity.user.OrderCompleteActivity" />
        <activity android:name=".ui.activity.user.UserInfoActivity" />
        <activity android:name=".ui.activity.admin.AdminFoodManagementActivity" />
        <activity android:name=".ui.activity.user.UpdateProfileUserActivity" />
        <activity android:name=".ui.activity.admin.UpdateProfileAdminActivity" />
        <activity android:name=".ui.activity.user.ChangePasswordUserActivity" />
        <activity android:name=".ui.activity.user.DetailNewsActivity" />
        <activity android:name=".ui.activity.user.DetailFoodActivity" />
        <activity android:name=".ui.activity.user.ListRestaurantActivity" />
        <activity android:name=".ui.activity.user.LoginActivity" />
        <activity android:name=".ui.activity.user.RegisterActivity" />
        <activity android:name=".ui.activity.user.NewsActivity" />
        <activity android:name=".ui.activity.admin.AdminNewsManagementActivity" />
        <activity android:name=".ui.activity.admin.AdminBillDetailManagementActivity" />
        <activity android:name=".ui.activity.admin.SuperAdminManageActivity" />
        <activity android:name=".ui.activity.admin.DetailAccountSuperAdminActivity" />
    </application>
</manifest>